# 5. Реализовать структуру «Рейтинг»
my_list = [7, 5, 3, 3, 2]
Input_mode = True
while Input_mode:
    new_score = int ( input ("Введите новый элемент рейтинга (0-завершить ввод):") )
    if new_score == 0:
        Input_mode = False
        break
    my_list.append (new_score)
    my_list.sort (reverse=True)
    print ("Результат:", my_list)
